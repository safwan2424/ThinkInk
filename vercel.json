{
    "version": 2,
    "builds": [
      {
        "src": "Client/package.json",   
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"  
        }
      },
      {
        "src": "API/**/*.js",  
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)", 
        "dest": "Client/$1"
      },
      {
        "src": "/api/(.*)",  
        "dest": "API/$1"
      }
    ]
  }
  